= @user.firstname
= link_to "nouveau flux ", new_flux_path

.container
  .row
    - @fluxes.each do |flux|
      .col-md-6
        .panel-primary
          .panel-heading
            .panel-title
              %h2= flux.title
        - flux.actus.each do |actu|
          .panel-body
            = link_to truncate(actu.title, length: 75), actu.entry_id, target: :blank
            = link_to root_path, method: :get do
              %span.glyphicon.glyphicon-eye-close.pull-right
